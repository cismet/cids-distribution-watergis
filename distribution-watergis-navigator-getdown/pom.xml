            <version>1-SNAPSHOT</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>de.cismet.localWatergis</groupId>
            <artifactId>template</artifactId>
            <version>1-SNAPSHOT</version>
            <scope>runtime</scope>
        </dependency>
